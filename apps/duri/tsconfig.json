{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": "./",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@duri/*": ["./apps/duri/src/*"],
      "@pages/*": ["./apps/duri/src/pages/*"],
      "@components/*": ["./apps/duri/src/components/*"],
      "@styles/*": ["./apps/duri/src/styles/*"],
      "@assets/*": ["./apps/duri/src/assets/*"],
      "@mocks/*": ["./apps/duri/src/mocks/*"],
    }
  },
  "include": ["src/**/*", "../../**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
